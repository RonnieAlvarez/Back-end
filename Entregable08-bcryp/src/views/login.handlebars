<div id="login" class="container bg-info w-50 rounded mt-3 pb-2">
  <h3 class="text-center text-white pb-2">My eCommerce App</h3>
  <div class="container border border-secondary rounded ">
    <div id="login-row" class="row justify-content-center align-items-center">
      <div id="login-column" class="col-md-9">
        <div id="login-box" class="col-md-12">
          <form id="loginForm" action="/api/sessions/login" method="POST">
            <h3 class="text-center text-light">Login</h3>
            <div class="row my-2">
              <label class="col-3 form-label">Email</label>
              <input type="email" class="col-4 form-control w-75" name="email" id="email" placeholder="abc@mail.com" />
            </div>
            <div class="row mb-2">
              <label class="col-3 form-label">Password</label>
              <input type="password" class="col-4 form-control w-75" name="password" id="password" placeholder="password" />
            </div>
            <div class="form-group d-flex flex-row justify-content-between mt-1 mb-3">
              <a href="/users/register" class="btn btn-light rounded mt-2 opacity-75" role="button">Register here</a>
              <button class="mt-2 btn btn-primary rounded px-5 fw-bold" type="submit">Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
  